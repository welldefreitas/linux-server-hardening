# Cloud Web Server Profile (Ubuntu 22.04/24.04)
# Inbound: SSH + HTTP + HTTPS
# Keep password auth off (key-only) for cloud.

SSH_PORT=22
ALLOW_PASSWORD_AUTH=false

ALLOW_HTTP=true
ALLOW_HTTPS=true

AUTO_REBOOT=false

# SSH posture: web servers usually should NOT allow SSH forwarding
SSH_ALLOW_TCP_FORWARDING=no
SSH_ALLOW_AGENT_FORWARDING=no
