# Bastion / Jump Host Profile (Ubuntu 22.04/24.04)
# Inbound: SSH only (ideally restricted by Security Group to your IP/VPN)
# Key-only auth. Enable TCP forwarding for ProxyJump / port forwarding use cases.

SSH_PORT=22
ALLOW_PASSWORD_AUTH=false

ALLOW_HTTP=false
ALLOW_HTTPS=false

AUTO_REBOOT=false

# Bastion needs forwarding; agent forwarding is risky, keep it OFF by default.
SSH_ALLOW_TCP_FORWARDING=yes
SSH_ALLOW_AGENT_FORWARDING=no
