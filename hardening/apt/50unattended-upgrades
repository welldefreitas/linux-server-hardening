// Unattended Upgrades baseline for Ubuntu cloud.
// Keep it conservative: security updates + safe cleanup.

Unattended-Upgrade::Allowed-Origins {
        "${distro_id}:${distro_codename}-security";
        "${distro_id}ESMApps:${distro_codename}-apps-security";
        "${distro_id}ESM:${distro_codename}-infra-security";
};

// Auto-remove unused dependencies
Unattended-Upgrade::Remove-Unused-Dependencies "true";
// Auto-remove old kernels (important for small cloud disks)
Unattended-Upgrade::Remove-Unused-Kernel-Packages "true";

// Reboot policy:
// For stricter posture you can set true, but default is "false" to avoid surprise outages.
Unattended-Upgrade::Automatic-Reboot "false";
// If you enable reboot, prefer a maintenance window:
Unattended-Upgrade::Automatic-Reboot-Time "03:30";

Unattended-Upgrade::Mail "root";
Unattended-Upgrade::MailOnlyOnError "true";
